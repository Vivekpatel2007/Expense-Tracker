<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Groups | SpendSync</title>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar-transition { transition: transform 0.3s ease-in-out; }
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #f1f1f1; }
    ::-webkit-scrollbar-thumb { background: #d1d5db; border-radius: 10px; }
  </style>
</head>

<body class="bg-gray-50 flex h-screen overflow-hidden">
  <div class="md:hidden fixed top-0 inset-x-0 bg-white shadow-md z-50 flex justify-between items-center px-4 py-3">
    <span class="font-bold text-xl text-gray-800">SpendSync</span>
    <button id="menuBtn" class="text-gray-600 focus:outline-none hover:text-purple-600 transition-colors">
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
    </button>
  </div>

  <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden md:hidden"></div>

  <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-2xl transform -translate-x-full md:translate-x-0 sidebar-transition md:static md:h-full md:shadow-none md:border-r border-gray-200 flex-shrink-0">
    <div class="p-6 h-full flex flex-col overflow-y-auto">
      <div class="flex justify-between items-center mb-6 md:hidden">
        <span class="font-bold text-xl text-gray-800">Menu</span>
        <button id="closeSidebar" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>
      <div class="flex flex-col items-center mb-8">
        <h3 class="font-bold text-gray-800 text-lg"><%= user.username %></h3>
      </div>
      <nav class="space-y-2 flex-1">
        <a href="/" class="flex items-center gap-3 px-6 py-3 rounded-xl text-gray-600 hover:bg-gray-50 hover:text-purple-600 transition font-medium">Dashboard</a>
        <a href="/income" class="flex items-center gap-3 px-6 py-3 rounded-xl text-gray-600 hover:bg-gray-50 hover:text-purple-600 transition font-medium">Income</a>
        <a href="/expense" class="flex items-center gap-3 px-6 py-3 rounded-xl text-gray-600 hover:bg-gray-50 hover:text-purple-600 transition font-medium">Expense</a>
        <a href="/budget" class="flex items-center gap-3 px-6 py-3 rounded-xl text-gray-600 hover:bg-gray-50 hover:text-purple-600 transition font-medium">Budgets</a>
        <a href="/groups" class="flex items-center gap-3 px-6 py-3 rounded-xl bg-purple-600 text-white shadow-lg shadow-purple-200 font-medium">Groups</a>
      </nav>
      <a href="/logout" class="flex items-center gap-3 px-6 py-3 rounded-xl text-red-500 hover:bg-red-50 transition mt-4 font-medium">Logout</a>
    </div>
  </aside>

  <main class="flex-1 w-full p-4 pt-20 md:p-8 md:pt-8 overflow-y-auto h-full">
    <header class="flex flex-wrap justify-between items-center mb-8 gap-4">
      <div>
        <h2 class="text-3xl font-bold text-gray-800">Shared Groups</h2>
        <p class="text-gray-500 mt-1">Split expenses with friends and family seamlessly.</p>
      </div>
      <button onclick="toggleModal(true)" class="bg-purple-600 text-white font-semibold py-2.5 px-6 rounded-lg hover:bg-purple-700 transition-colors">
        + Create New Group
      </button>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (groups && groups.length > 0) { %>
        <% groups.forEach(function(group) { %>
          <% const isAdmin = group.createdBy.toString() === userId.toString(); %>
          
          <div class="relative bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex flex-col hover:border-purple-300 hover:shadow-md transition-all group">
            
            <form action="/groups/<%= group._id %>/delete" method="POST" class="absolute top-4 right-4 z-10" 
                  onsubmit="return confirm('<%= isAdmin ? 'Delete this group for everyone?' : 'Leave this group?' %>')">
                <button type="submit" class="p-2 text-gray-300 hover:text-red-500 transition-colors rounded-lg hover:bg-red-50" title="<%= isAdmin ? 'Delete Group' : 'Leave Group' %>">
                    <% if (isAdmin) { %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    <% } else { %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                    <% } %>
                </button>
            </form>

            <a href="/groups/<%= group._id %>" class="flex-1 flex flex-col">
                <div class="flex justify-between items-start mb-4">
                  <div class="bg-purple-100 p-3 rounded-xl group-hover:bg-purple-600 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </div>
                  <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider pr-8">
                    <%= group.members.length %> Members
                  </span>
                </div>
                
                <h4 class="font-bold text-gray-800 text-xl mb-1"><%= group.name %></h4>
                <p class="text-sm text-gray-500 mb-4">Created on <%= new Date(group.createdAt).toLocaleDateString() %></p>
                
                <div class="mt-auto pt-4 border-t border-gray-50 flex items-center text-purple-600 font-semibold text-sm">
                  View Expenses 
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-full text-center py-20 bg-white rounded-3xl border-2 border-dashed border-gray-200">
            <div class="mx-auto w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
          <h3 class="text-lg font-bold text-gray-800">No Groups Found</h3>
          <p class="text-gray-500 mb-6">Create a group to start splitting bills with your team.</p>
          <button onclick="toggleModal(true)" class="text-purple-600 font-bold hover:underline">Create your first group &rarr;</button>
        </div>
      <% } %>
    </div>
  </main>

  <div id="groupModal" class="fixed inset-0 bg-black/30 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-2xl w-full max-w-md p-8 shadow-2xl relative mx-4">
      <button onclick="toggleModal(false)" class="absolute top-6 right-6 text-gray-400 hover:text-gray-600 font-bold text-xl">âœ•</button>
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Group</h2>
      
      <form action="/groups/create" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Group Name</label>
          <input name="name" type="text" placeholder="e.g. Flatmates, Trip to Goa" required 
            class="w-full border border-gray-200 rounded-lg px-4 py-3 outline-none focus:ring-2 focus:ring-purple-500">
        </div>
        <p class="text-xs text-gray-500">You will be able to add members once the group is created.</p>
        <button type="submit" class="w-full bg-purple-600 text-white font-bold py-3.5 rounded-xl hover:bg-purple-700 transition-all mt-4 shadow-lg shadow-purple-100">
          Create Group
        </button>
      </form>
    </div>
  </div>

  <script>
    const [sidebar, overlay] = [document.getElementById('sidebar'), document.getElementById('sidebarOverlay')];
    const toggleSidebar = (show) => {
      sidebar.classList.toggle('-translate-x-full', !show);
      overlay.classList.toggle('hidden', !show);
    };
    document.getElementById('menuBtn').onclick = () => toggleSidebar(true);
    document.getElementById('closeSidebar').onclick = overlay.onclick = () => toggleSidebar(false);
    function toggleModal(show) { document.getElementById('groupModal').classList.toggle('hidden', !show); }
    // Check for success messages in URL
window.onload = () => {
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('message');

    if (message === 'deleted') {
        Toastify({
            text: "Group deleted successfully",
            duration: 3000,
            gravity: "top", 
            position: "right", 
            style: { background: "#ef4444" } // Red for delete
        }).showToast();
        // Clean URL after showing toast
        window.history.replaceState({}, document.title, "/groups");
    } else if (message === 'left') {
        Toastify({
            text: "You have left the group",
            duration: 3000,
            gravity: "top",
            position: "right",
            style: { background: "#6b7280" } // Gray for leave
        }).showToast();
        window.history.replaceState({}, document.title, "/groups");
    }
};
  </script>
</body>
</html>