<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Transactions | BudgetBuddy</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-50 flex h-screen overflow-hidden">

    <aside class="hidden md:flex w-64 bg-white border-r border-gray-200 flex-col p-6">
        <h3 class="font-bold text-gray-800 text-xl mb-8">BudgetBuddy</h3>
        <nav class="space-y-2 flex-1">
            <a href="/" class="block px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-xl font-medium">Dashboard</a>
            <a href="/income" class="block px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-xl font-medium">Income</a>
            <a href="/expense" class="block px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-xl font-medium">Expense</a>
        </nav>
        <a href="/logout" class="text-red-500 font-medium p-4">Logout</a>
    </aside>

    <main class="flex-1 overflow-y-auto p-4 md:p-8">
        <header class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-3xl font-bold text-gray-800">All Transactions</h2>
                <p class="text-gray-500">Complete history of your finances.</p>
            </div>
            <a href="/" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-xl font-bold text-sm">Back to Dashboard</a>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Total Balance</p>
                <p class="text-2xl font-black text-gray-800">₹<%= balance.toLocaleString('en-IN') %></p>
            </div>
            <div class="bg-green-50 p-6 rounded-2xl border border-green-100">
                <p class="text-xs font-bold text-green-400 uppercase tracking-widest">Total Income</p>
                <p class="text-2xl font-black text-green-600">₹<%= income.toLocaleString('en-IN') %></p>
            </div>
            <div class="bg-red-50 p-6 rounded-2xl border border-red-100">
                <p class="text-xs font-bold text-red-400 uppercase tracking-widest">Total Expense</p>
                <p class="text-2xl font-black text-red-600">₹<%= expense.toLocaleString('en-IN') %></p>
            </div>
        </div>

        <div class="bg-white p-4 rounded-2xl border border-gray-100 mb-6 flex flex-wrap gap-4 items-center">
            <input type="text" id="txnSearch" onkeyup="filterTxn()" placeholder="Search category..." class="flex-1 px-4 py-2 border rounded-xl outline-none focus:ring-2 focus:ring-purple-500">
            <select id="typeFilter" onchange="filterTxn()" class="px-4 py-2 border rounded-xl outline-none">
                <option value="all">All Types</option>
                <option value="income">Income Only</option>
                <option value="expense">Expense Only</option>
            </select>
        </div>

        <div class="bg-white rounded-3xl border border-gray-100 overflow-hidden shadow-sm">
            <div id="txnList" class="divide-y divide-gray-50">
                <% if (transactions && transactions.length > 0) { %>
                    <% transactions.forEach(t => { %>
                        <div class="txn-item p-6 flex justify-between items-center hover:bg-gray-50 transition" 
                             data-category="<%= t.category.toLowerCase() %>" 
                             data-type="<%= t.type %>">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-2xl flex items-center justify-center font-bold <%= t.type === 'income' ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600' %>">
                                    <%= t.category.charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-800 uppercase"><%= t.category %></h4>
                                    <p class="text-xs text-gray-400"><%= new Date(t.date).toDateString() %></p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-lg font-black <%= t.type === 'income' ? 'text-green-600' : 'text-red-600' %>">
                                    <%= t.type === 'income' ? '+' : '-' %> ₹<%= t.amount.toLocaleString('en-IN') %>
                                </p>
                                <span class="text-[10px] uppercase font-bold text-gray-300"><%= t.type %></span>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="p-10 text-center text-gray-400">No transactions found.</p>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        function filterTxn() {
            const query = document.getElementById('txnSearch').value.toLowerCase();
            const type = document.getElementById('typeFilter').value;
            const items = document.querySelectorAll('.txn-item');

            items.forEach(item => {
                const matchesSearch = item.dataset.category.includes(query);
                const matchesType = type === 'all' || item.dataset.type === type;
                
                if (matchesSearch && matchesType) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
</body>

</html>
